<div class="section-content">
  <h2>Edit</h2>
  <legend></legend>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>
    <form role="form">
      <div class="form-group">
        <%= f.input :first_name, required: true, placeholder: "First name", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.input :last_name, required: true, placeholder: "Last name" %>
      </div>
      <div class="form-group">
        <%= f.input :email, required: true, :autofocus => true, placeholder: "Email" %>
      </div>
      <div class="form-group">
        <%= f.input :image %>
      </div>
      <div class="form-group">
        <%= f.input :current_password, required: true, autocomplete: "off", placeholder: "password" %>
      </div>
      <div class="actions"><%= f.button :submit %></div>
    </form>
  <% end %>

</div>