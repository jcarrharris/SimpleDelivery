<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

<form role="form">
  <div class="form-group">
    <%= f.input :first_name, required: true, placeholder: "First name", class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.input :last_name, required: true, placeholder: "Last name" %>
  </div>
    <div class="form-group">
    <%= f.input :email, required: true, :autofocus => true, placeholder: "Email" %>
  </div>
  <div class="form-group">
    <%= f.input :role, collection: ["Merchant", "Courier"], required: true, include_blank: false %>
  </div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
  <div class="form-group">
    <%= f.input :password, autocomplete: "off", required: false, placeholder: "password" %>
  </div>
  <div class="form-group">
    <%= f.input :password_confirmation, required: false, placeholder: "Confirm Password" %>
  </div>
  <div class="form-group">
    <label for="exampleInputFile"></label>
        <input type="file" id="exampleInputFile">
  </div>
  <div class="form-group">
  </div>
  <div class="actions"><%= f.button :submit%></div>
  </div>
<% end %>
</form>