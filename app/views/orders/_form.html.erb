<%= simple_form_for [@business, @location, @order] do |f| %>
  <% if @order.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @order.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.input :delivery_address, placeholder: "Delivery Address" %>
    <%= f.input :phone_number, placeholder: "Phone Number" %>
    <%= f.input :packaging, collection: ["Swish Small", "Swish Regular", "Swish Large", "Custom"] %></br>
    <%= f.label "Package Dimensions:" %>
    <%= f.input :length, placeholder: "Length (cm)" %>
    <%= f.input :width, placeholder: "Width (cm)" %>
    <%= f.input :height, placeholder: "Height (cm)" %></br>
    <%= f.input :weight, placeholder: "Weight" %>
    <%= f.input :quantity, placeholder: "Quantity" %>
    <%= f.input :declared_value, placeholder: "Declared Value (CAD)" %>
    <%= f.input :pickup_time, minute_step: 30, ampm: true, start_year: DateTime.now.year%>
    <%= f.input :delivery_time, minute_step: 30, ampm: true, start_year: DateTime.now.year %>
  </div>
  <div class="actions"><%= f.button :submit %></div>
<% end %>