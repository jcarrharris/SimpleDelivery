<div id="accordion">
  <% @order.each do |o| %>
    <% unless o.status == "Delivered" %>
    <div><p><%= link_to o.tracking_number, business_location_order_path(o.location.business, o.location, o), class:"insidelink" %></p></div>
    <div class="table-responsive">
      <table class="table table-hover">
        <tbody></div>
        <%= link_to "See Details", business_location_order_path(o.location.business, o.location, o), class:"insidelink" %>
        <tr><td><%= sortable "status" %>
          <% if (o.user == current_user) && (o.status != "Delivered") %>
            <%= simple_form_for o, url: order_status_path(o) do |f| %>
              <div><td class="value"><%= f.input :status, collection: ["Pending", "Enroute", "Delivered"], label: false, include_blank: false, class:"status-dropdown" %>
              <%= f.button :submit,"Update", class:"courier-button" %></td>
            <% end %></div>
          <% else %>
           <td class="value"><%= o.status %></td>
          <% end %>
        </tr>
        <tr><td><%= sortable "pickup_time" %><td class="value"><%= o.pickup_time.strftime("%b %e, %l:%M %p") %></td></tr>
        <tr><td><%= sortable "pickup_address" %><td class="value"><%= o.location.address %></td></tr>
        <tr><td><%= sortable "delivery_time" %><td class="value"><%= o.delivery_time.strftime("%b %e, %l:%M %p") %></td></tr>
        <tr><td><%= sortable "delivery_address" %><td class="value"><%= o.delivery_address %></td></tr>
        <tr><td><%= sortable "courier" %>
          <% if o.user != nil %>
            <td class="value"><%= o.user.first_name %></td>
          <% else %>
          <div>
            <td class="value"><%= link_to "Accept", order_courier_path(o), method: :post, confirm: "Are you sure?", class:"accept-button" %></td>
          </div>
          <% end %>
        </tr>
      </table>
      </div>
    <% end %>
  <% end %>
</div>