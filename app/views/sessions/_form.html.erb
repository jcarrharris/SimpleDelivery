<%= form_tag sessions_path, method: :post do %>
  <div class="field">
    <%= input :email, params[:email], placeholder: "Email" %>
  </div>
  <div class="field">
    <%= input :password, value = nil, placeholder: "Password" %>
  </div>
  <div class="actions"><%= submit_tag "Log in" %></div>
  <div class="userinfo"> 
		<%= label_tag "Keep me logged in" %>
		<%= check_box_tag :remember %>
	</div>
<% end %>