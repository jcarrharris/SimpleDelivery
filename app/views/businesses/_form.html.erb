<%= simple_form_for @business, html: {multipart: true} do |f| %>
  <% if @business.errors.any? %>
      <h2>Form is invalid</h2>
        <% for message in @business.errors.full_messages %>
          <li> <%= message %> </li>
        <% end %>
  <% end %>
  <div class="field">
    <%= f.input :business_name, placeholder: "Business Name" %>
    <%= f.input :website_url, placeholder: "Website URL" %>
    <%= f.input :phone_number, placeholder: "Phone Number" %>
    <%= f.input :image %>
  </div>
  <div class="actions"><%= f.button :submit %></div>
<% end %>