<%= simple_form_for @business, html: {multipart: true} do |f| %>
<div class="error-messages">
  <% if @business.errors.any? %>
      <h2>Form is invalid</h2>
        <% for message in @business.errors.full_messages %>
          <li> <%= message %> </li>
        <% end %>
  <% end %>
</div>
  <form role="form">
    <legend></legend>
    <fieldset>
    <div class="form-group">
    <%= f.input :business_name, autofocus: true, placeholder: "Business Name" %>
    </div>
    <div class="form-group">
    <%= f.input :website_url, placeholder: "Website URL" %>
    </div>
    <div class="form-group">
    <%= f.input :phone_number, placeholder: "Phone Number" %>
    </div>  
    <div class="form-group">
    <label for="exampleInputFile"></label>
            <input type="file" id="exampleInputFile">
    </fieldset>
  <div class="actions"><%= f.button :submit %></div>
</form>
<% end %>