<%= simple_form_for @business, html: {multipart: true} do |f| %>
  <div><% f.error_notification %></div>
  <form role="form">
    <fieldset>
      <div class="form-group">
        <%= f.input :business_name, autofocus: true, placeholder: "Business Name" %>
      </div>
      <div class="form-group">
        <%= f.input :website_url, placeholder: "Website URL" %>
      </div>
      <div class="form-group">
        <label>Phone number</label></br>
        <input type="text" class="phone_us" name="phone_number" placeholder="(XXX) XXX-XXXX">
      </div>  
      <div class="form-group">
        <%= f.input :image %>
      </div>
    </fieldset>
    <div class="actions"><%= f.button :submit %></div>
  </form>
<% end %>