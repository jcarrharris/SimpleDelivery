<div class="section-content">
  <span>
    <h2>Businesses</h2>
    <p><%= link_to "Add a new business", new_business_path(@business), class:"button"%></p>
  </span>
  <div id="accordion">
    <% @business.each do |b| %>
      <%= link_to b.business_name %>
      <div class="table-responsive">
        <table class="table table-hover">
          <%= link_to "See Details", business_path(b), class: "accordion_link" %>
          <tbody>
            <tr><td>Website</td><td class="value"><a href="http://<%= b.website_url %>" target="_blank"><%= b.website_url %></a></td></tr>
            <tr><td>Phone Number</td><td class="value"><%= number_to_phone(b.phone_number, area_code: true) %></td></tr>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>
</div>