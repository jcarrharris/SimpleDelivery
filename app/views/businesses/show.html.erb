<div class="section-content">
  <span>
    <h1><%= @business.business_name %></h1>
    <%= link_to "Edit", edit_business_path(@business), class:"diff"%>
    <%= link_to "New Location", new_business_location_path(@business), class:"button" %>
  </span>
  <div class="picture"><%= image_tag @business.image %></div>
  <table class="table table-hover">
    <tbody>
      <tr><td>Website</td><td class="value"><a href="http://<%= @business.website_url %>" target="_blank"><%= @business.website_url %></a></td></tr>
      <tr><td>Phone Number</td><td class="value"><%= number_to_phone(@business.phone_number, area_code: true) %></td></tr>
    </tbody>
  </table>
</div>