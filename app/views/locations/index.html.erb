<div class="section-content">
  <h2>Locations</h2>
  <div id="accordion">
    <% @location.each do |l| %>
      <%=link_to l.location_name %>
      <div class="table-responsive">
        <table class="table table-hover">
          <%= link_to "See Details", business_location_path(l.business, l), class: "insidelink" %>
          <tbody>
            <tr><td>Address</td><td class="value"> <%= l.address %></td></tr>
            <tr><td>Phone Number</td><td class="value"><%= number_to_phone(l.phone_number, area_code: true) %></td></tr>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>
</div>