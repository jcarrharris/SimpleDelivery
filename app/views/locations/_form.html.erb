<%= simple_form_for [@business, @location] do |f| %>
    <div>
      <% f.error_notification %>
    </div>
  <div class="field">
    <fieldset>
      <legend></legend>
      <div class="form-group">
        <%= f.input :location_name, :autofocus => true, placeholder: "Location Name" %></br>
      </div>
      <div class="form-group">
        <%= f.input :address, placeholder: "Address" %></br>
      </div>
      <div class="form-group">
        <%= f.input :phone_number, placeholder: "Phone Number" %>
      </div>
    </fieldset>
  </div>
  <div class="actions"><%= f.button :submit %></div>
<% end %>