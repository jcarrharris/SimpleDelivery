<%= simple_form_for [@business, @location] do |f| %>
    <div>
      <% f.error_notification %>
    </div>
  <div class="field">
    <fieldset>
      <legend></legend>
      <div class="form-group">
        <%= f.input :location_name, :autofocus => true, placeholder: "Location Name" %>
      </div>
      <div class="form-group">
        <%= f.input :address, placeholder: "Address" %>
      </div>
      <div class="form-group">
        <%= f.label "Phone Number" %></br>
        <%= text_field_tag "phone1", nil, maxlength: 3, placeholder: "xxx" %>
        <%= text_field_tag "phone2", nil, maxlength: 3, placeholder: "xxx" %>
        <%= text_field_tag "phone3", nil, maxlength: 4, placeholder: "xxxx" %>
      </div>
    </fieldset>
  </div>
  <div class="actions"><%= f.button :submit %></div>
<% end %>