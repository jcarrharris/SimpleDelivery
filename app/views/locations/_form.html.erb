<%= simple_form_for [@business, @location] do |f| %>
    <div>
      <% f.error_notification %>
    </div>
  <div class="field">
    <fieldset>
      <div class="form-group">
        <%= f.input :location_name, :autofocus => true, placeholder: "Location Name" %>
      </div>
      <div class="form-group">
        <label>Phone number</label></br>
        <input type="text" class="phone_us" name="phone_number" placeholder="(XXX) XXX-XXXX">
      </div>
      <div class="form-group">
        <label>Address</label></br>
        <input type="text" class="address" name="address" size="35">
      </div>
      <div class="map_canvas" style="width:90%;height:380px;"></div>
    </fieldset>
    <div class="actions"><%= f.button :submit %></div>
  </div>
<% end %>