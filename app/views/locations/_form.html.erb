<%= simple_form_for [@business, @location] do |f| %>
    <div>
      <% f.error_notification %>
    </div>
  <div class="field">
    <fieldset>
      <div class="form-group">
        <%= f.input :location_name, :autofocus => true, placeholder: "Location Name" %>
      </div>
      <div class="form-group">
        <%= f.input :address, placeholder: "Address" %>
      </div>
      <label>Phone number:</label><br />
      <input type="text"  id="phone-number" name="phone-number"placeholder="(XXX) XXX-XXXX" /><br /><br />
    </fieldset>
    <div class="actions"><%= f.button :submit %></div>
  </div>
<% end %>