<%= simple_form_for [@business, @location] do |f| %>
    <div>
      <% f.error_notification %>
    </div>
  <div class="field">
    <fieldset>
      <legend></legend>
      <div class="form-group">
        <%= f.input :location_name, :autofocus => true, placeholder: "Location Name" %>
      </div>
      <div class="form-group">
        <%= f.input :address, placeholder: "Address" %>
      </div>
      <div class="form-group">
        <label>Phone number</label></br>
        <input type="text" class="phone_us" name="phone_number" placeholder="(XXX) XXX-XXXX">
      </div>
    </fieldset>
  </div>
  <div class="actions"><%= f.button :submit %></div>
<% end %>